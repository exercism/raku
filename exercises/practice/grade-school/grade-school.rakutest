#!/usr/bin/env raku
use Test;
use JSON::Fast;
use lib $?FILE.IO.dirname;
use GradeSchool;
plan 8;

my @test-cases = from-json($=pod[*-1].contents).List;
for @test-cases -> %case {
  cmp-ok
    roster( |%(<students grade> Z=> %case<input><students desiredGrade>:v) ),
    '~~', |%case<expected description>;
}

