} # end: d45df9ea-1db0-47f3-b18c-d365db49d938

subtest "Can handle concurrent transactions" => { # begin: ba0c1e0b-0f00-416f-8097-a7dfc97871ff
    my $account := BankAccount.new;
    lives-ok(
        {
            $account.open;
            await Promise.allof(
                start {
                    $account.deposit(1);
                    $account.withdraw(1);
                } xx 1000
            );
        },
        'operations',
    );
    cmp-ok(
        $account.balance,
        &infix:<eqv>,
        0,
        'balance',
    );
} # end: ba0c1e0b-0f00-416f-8097-a7dfc97871ff

done-testing;
