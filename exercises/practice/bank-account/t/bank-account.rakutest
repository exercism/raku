subtest "Can do multiple operations sequentially" => { # begin: 45161c94-a094-4c77-9cec-998b70429bda
    my $account := BankAccount.new;
    lives-ok(
        {
            $account.open;
            $account.deposit(100);
            $account.deposit(110);
            $account.withdraw(200);
            $account.deposit(60);
            $account.withdraw(50);
        },
        'operations',
    );
    cmp-ok(
        $account.balance,
        &infix:<eqv>,
        20,
        'balance',
    );
